{
  "extends": ["react-app", "airbnb", "airbnb/hooks"],
  "rules": {
    "semi": ["error", "always"],
    "jsx-quotes": ["error", "prefer-single"],
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "always",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "arrow-parens": ["error", "always"],
    "react/jsx-filename-extension": ["error", {"extensions": [".js", ".jsx"]}]
  }
}
